<div class="details-links">
  <% details.socials.forEach((social) => { %>
  <a href="<%= social.URL %>" class="details-link">
    <img class="details-link-image" src="<%= social.image %>" />
  </a>
  <% }) %>
</div>

<div class="details-information">
  <div class="details-information-text">
    Explore a universe of gaming consoles,<br />
    controllers, headsets, and amazing skins.

    <img class="details-information-quote" src="/register/open-quote.png" />
    <img class="details-information-quote" src="/register/close-quote.png" />
  </div>

  <div class="details-controller-container">
    <div class="details-controller-indicators">
      <% for(let i = 0; i < 3; i++) { %>
      <div class="details-controller-indicator"></div>
      <% } %>
    </div>

    <div class="details-controller-buttons">
      <img
        class="details-controller-button"
        src="/buttons/basic/arrow-head-left.png"
      />

      <img
        class="details-controller-button"
        src="/buttons/basic/arrow-head-right.png"
      />
    </div>
  </div>
</div>

<img class="register-details-background" src="/register/background-1.jpg" />
<img class="register-details-background" src="/register/background-2.jpg" />
<img class="register-details-background" src="/register/background-3.jpg" />
