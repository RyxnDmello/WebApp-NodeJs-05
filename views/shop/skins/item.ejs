<% skins.products.forEach((product) => { %>
<form class="skins-item" action="/account/cart/add" method="post">
  <input type="hidden" name="ID" value="<%= product.ID %>" />
  <input type="hidden" name="brand" value="<%= skins.post.brand %>" />
  <input type="hidden" name="type" value="<%= skins.post.type %>" />
  <input type="hidden" name="class" value="<%= skins.post.class %>" />

  <div class="skins-item-header">
    <img class="skins-item-image" src="<%= product.image %>" />
    <h2 class="skins-item-color"><%= product.color %></h2>
  </div>

  <div class="skins-item-details">
    <p class="skins-item-type">CyberSkins</p>
    <p class="skins-item-price">$<%= product.price %></p>
  </div>

  <div class="skins-item-buttons">
    <button class="skins-item-button" type="submit" name="add" value="CART">
      <img class="skins-item-button-image" src="/buttons/shop/cart-add.png" />
      <p class="skins-item-button-text">Add To Cart</p>
    </button>

    <div class="skins-item-other-buttons">
      <button class="skins-item-button" type="submit" name="add" value="WISH">
        <img class="skins-item-button-image" src="/buttons/shop/wish.png" />
        <p class="skins-item-button-text">Wishlist</p>
      </button>

      <a class="skins-item-explore-link" href="/">
        <img
          class="skins-item-explore-link-image"
          src="/buttons/shop/explore.png"
        />
      </a>
    </div>
  </div>
</form>
<% }) %>
