<div class="shop-carousel">
  <form class="shop-slide" action="/shop/item/add" method="post">
    <img class="shop-slide-image" src="/shop/playstation/consoles/white.png" />

    <div class="shop-slide-information">
      <h4 class="shop-slide-title">THE ORIGINAL WHITE</h4>

      <div class="shop-slide-details">
        <p class="shop-slide-sponsor">Sony X CyberVerse</p>
        <p class="shop-slide-price">$500</p>
      </div>

      <button class="shop-slide-button" type="submit">
        <img class="shop-slide-button-image" src="/buttons/shop/cart-add.png" />
        <p class="shop-slide-button-text">Add To Cart</p>
      </button>
    </div>
  </form>

  <img class="shop-carousel-background" src="/shop/background.jpg" />
</div>

<div class="shop-list">
  <% for(let item = 0; item < 8; item++) { %>
  <form class="shop-item" action="/shop/item/add" method="post">
    <div class="shop-item-header">
      <img class="shop-item-image" src="/shop/playstation/consoles/white.png" />
      <h2 class="shop-item-color">RED SNAKE</h2>
    </div>

    <div class="shop-item-details">
      <p class="shop-item-type">Originals</p>
      <p class="shop-item-price">$200</p>
    </div>

    <button class="shop-item-button" type="submit">
      <img class="shop-item-button-image" src="/buttons/shop/cart-add.png" />
      <p class="shop-item-button-text">Add To Cart</p>
    </button>
  </form>
  <% } %>
</div>
