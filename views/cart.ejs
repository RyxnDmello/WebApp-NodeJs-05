<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- #region Google Fonts Server -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- #endregion -->
    <!-- #region Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Abel&display=swap"
      rel="stylesheet"
    />
    <!-- #endregion -->
    <link rel="stylesheet" href="/cart.css" />
    <title>CyberVerse | Cart</title>
  </head>

  <body>
    <header id="header">
      <%- include("./common/navbar.ejs", { navbar: navbar }) %>
    </header>

    <% if(cart !== "EMPTY" && bill !== "EMPTY") { %>
    <main>
      <section id="introduction">
        <%- include("./cart/introduction.ejs") %>
      </section>

      <% if(cart.originals.length !== 0) { %>
      <section id="originals">
        <%- include("./cart/originals.ejs", { originals: cart.originals }) %>
      </section>
      <% } if(cart.skins.length !== 0) { %>
      <section id="skins">
        <%- include("./cart/skins.ejs", { skins: cart.skins }) %>
      </section>
      <% } if(cart.combos.length !== 0) { %>
      <section id="combos">
        <%- include("./cart/combos.ejs", { combos: cart.combos }) %>
      </section>
      <% } %>

      <section id="billing">
        <%- include("./cart/billing.ejs", { bill: bill }) %>
      </section>
    </main>
    <% } else { %>
    <main>
      <section id="empty">
        <%- include("./common/empty-cart.ejs", { message: "YOUR CART" }) %>
      </section>
    </main>
    <% } %>

    <script type="module" src="/Cart.js"></script>
  </body>
</html>
