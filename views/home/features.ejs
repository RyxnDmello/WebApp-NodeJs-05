<article class="features-carousel">
  <% features.forEach((slide) => { %>
  <div class="feature-slide">
    <h2 class="feature-slide-title"><%= slide.title %></h2>
    <img class="feature-slide-image" src="<%= slide.image %>" />

    <div class="feature-points-container">
      <% slide.points.forEach((point) => { %>
      <div class="feature-point">
        <div class="feature-point-header">
          <img class="feature-point-image" src="<%= point.image %>" />
          <h4 class="feature-point-title"><%= point.title %></h4>
        </div>

        <p class="feature-point-details"><%= point.details %></p>
      </div>
      <% }) %>
    </div>
  </div>
  <% }) %>

  <img
    class="features-carousel-background"
    src="/home/features/background.png"
  />
</article>
