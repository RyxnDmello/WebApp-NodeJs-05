<% products.forEach((product) => { %>
<div class="header-product">
  <img class="header-product-image" src="<%= product.image %>" />

  <div class="header-product-details">
    <div class="header-product-header">
      <h4 class="header-product-title"><%= product.title %></h4>
      <p class="header-product-description"><%= product.description %></p>
    </div>

    <div class="header-product-items">
      <% product.items.forEach((item) => { %>
      <div class="header-product-item">
        <img class="header-product-item-image" src="<%= item %>" />
      </div>
      <% }) %>
    </div>

    <a class="header-product-link" href="<%= product.URL %>">
      <img class="header-product-link-image" src="/buttons/shop/bag.png" />
      <p class="header-product-link-text">Explore Collection</p>
    </a>
  </div>
</div>
<% }) %>
