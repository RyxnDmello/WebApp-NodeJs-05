<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- #region Google Fonts Server -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- #endregion -->
    <!-- #region Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Abel&display=swap"
      rel="stylesheet"
    />
    <!-- #endregion -->
    <link rel="stylesheet" href="/wishlist.css" />
    <title>CyberVerse | Wishlist</title>
  </head>

  <body>
    <header id="header">
      <%- include("./common/navbar.ejs", { navbar: navbar }) %>
    </header>

    <% if(wishlist !== "EMPTY") { %>
    <main>
      <section id="introduction">
        <%- include("./wishlist/introduction.ejs") %>
      </section>

      <% if(wishlist.originals.length !== 0) { %>
      <section id="originals">
        <%- include("./wishlist/originals.ejs", { originals: wishlist.originals
        }) %>
      </section>
      <% } if(wishlist.skins.length !== 0) { %>
      <section id="skins">
        <%- include("./wishlist/skins.ejs", { skins: wishlist.skins }) %>
      </section>
      <% } if(wishlist.combos.length !== 0) { %>
      <section id="combos">
        <%- include("./wishlist/combos.ejs", { combos: wishlist.combos }) %>
      </section>
      <% } %>
    </main>
    <% } else { %>
    <main>
      <section id="empty">
        <%- include("./common/empty.ejs", { message: "YOUR WISHLIST" }) %>
      </section>
    </main>
    <% } %>

    <footer id="footer">
      <%- include("./common/footer.ejs", { footer: footer }) %>
    </footer>

    <script type="module" src="/Wishlist.js"></script>
  </body>
</html>
